
<%- include('partials/_header') -%>

<div class="container">
        <div class="row">
            <!--FORM-->
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="POST">
                            <div class="form-group">
                                <input type="text" name="title" placeholder="Title of item" class="form-control">
                            </div>
                            <div class="form-group">
                                <textarea name="description" cols="80" class="form-control" placeholder="Description"></textarea>
                            </div>
                            <span style="margin-bottom: 0px;"><strong>Due Date: </strong></span>
                            <input type="date" name="dueDate"
                            style="margin-bottom: 10px; margin-top: 0px;" class="form-control">

                            <button type="submit" class="btn btn-primary btn-block"> Add</button>
                        </form>
                    </div>
                </div>
            </div>

            <!--LIST-->
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Date</th>
                            <th>Operation</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i = 0; i< items.length; i++) {%>
                            <tr>
                                <td><%= i + 1%></td>
                                <td><%= items[i].title%></td>
                                <td><%= items[i].description%></td>
                                <td><%= items[i].dueDate%></td>
                                <td>
                                    <a href="/changeStatus/<%= items[i]._id%>" 
                                    class="btn <%=items[i].status ? 'btn-success' : 'btn-dark' %>"> 
                                    Done
                                </a>
                                    <a href="/delete/<%= items[i]._id%>" class="btn btn-danger"> Delete </a>
                                    <a href="/edit/<%= items[i]._id%> " class="btn btn-info"> Edit </a>
                                </td>
                            </tr>


                            <% }%>
                    </tbody>
                </table>

               

        </div>
</div>
<%- include('partials/_footer') -%>
