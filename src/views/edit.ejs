
<%- include('partials/_header') -%>

<!--FORM-->
<div class="col-md-5">
    <div class="card">
        <div class="card-body">
            <form action="/edit/<%-item._id-%>" method="POST">
                <div class="form-group">
                    <input type="text" name="title" placeholder="Title of item" class="form-control" value="<%-item.title-%>">
                </div>
                <div class="form-group">
                    <textarea name="description" cols="80" class="form-control" placeholder="Description"><%-item.description-%></textarea>
                </div>
                <span style="margin-bottom: 0px;"><strong>Due Date: </strong></span>
                <input type="date" name="dueDate"
                style="margin-bottom: 10px; margin-top: 0px;" class="form-control" value="<%-item.dueDate-%>">

                <button type="submit" class="btn btn-primary btn-block">Save Changes</button>
            </form>
        </div>
    </div>
</div>

<%- include('partials/_footer') -%>
